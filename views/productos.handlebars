{{#if productos}}
  <!--
  si viene uno o mas productos muestra la tabla -->
  <table class="table">
    <head>
      <tr>
        <th>#</th>
        <th>Titulo</th>
        <th>Precio</th>
        <th>Imagen</th>
      </tr>
    </head>
    <body>
      {{#each productos}}
        <tr>
          <td>{{this.id}}</td>
          <td>{{this.title}}</td>
          <td>{{this.price}}</td>
          <td><img
              src={{this.thumbnail}}
              width="25"
              onerror="this.style.display='none'"
            /></td>
        </tr>
      {{/each}}
    </body>
  </table>
{{/if}}
{{#if error}}<!--
  si viene 'error' renderiza un alert -->
  <div class="alert">
    <strong>{{error}}</strong>
  </div>
{{/if}}